local platform = Instance.new("Part")
platform.Name = "MyPlatform"
platform.Size = Vector3.new(10000, 0.3, 10000) 
platform.Position = Vector3.new(0, -503, 0) 
platform.Anchored = true 
platform.BrickColor = BrickColor.new("Bright blue") 
platform.Parent = game.Workspace

local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local lplayer = Players.LocalPlayer


local targetPos = CFrame.new(0, -500, 0)


local TeleportGui = Instance.new("ScreenGui")
TeleportGui.Name = "FixedTeleportGui"
TeleportGui.Parent = game.CoreGui

local Frame = Instance.new("Frame")
Frame.Parent = TeleportGui
Frame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
Frame.BorderSizePixel = 2
Frame.Position = UDim2.new(0.4, 0, 0.45, 0)
Frame.Size = UDim2.new(0.15, 0, 0.12, 0)
Frame.Active = true
Frame.Draggable = true

local TPButton = Instance.new("TextButton")
TPButton.Parent = Frame
TPButton.BackgroundColor3 = Color3.fromRGB(0, 120, 215)
TPButton.Position = UDim2.new(0.1, 0, 0.15, 0)
TPButton.Size = UDim2.new(0.8, 0, 0.45, 0)
TPButton.TextColor3 = Color3.new(1, 1, 1)
TPButton.Text = "傳送至虛空"
TPButton.TextScaled = true

local HotkeyBox = Instance.new("TextBox")
HotkeyBox.Parent = Frame
HotkeyBox.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
HotkeyBox.Position = UDim2.new(0.1, 0, 0.65, 0)
HotkeyBox.Size = UDim2.new(0.8, 0, 0.25, 0)
HotkeyBox.TextColor3 = Color3.fromRGB(255, 255, 100)
HotkeyBox.Text = "熱鍵: T"
HotkeyBox.TextScaled = true

local HotkeyTP = Enum.KeyCode.T

local function DoTeleport()
    local char = lplayer.Character
    local root = char and char:FindFirstChild("HumanoidRootPart")
    if root then
        root.CFrame = targetPos
    end
end

TPButton.MouseButton1Click:Connect(DoTeleport)

HotkeyBox.FocusLost:Connect(function()
    local txt = HotkeyBox.Text:upper()
    if Enum.KeyCode[txt] then
        HotkeyTP = Enum.KeyCode[txt]
        HotkeyBox.Text = "已設定: " .. txt
    else
        HotkeyBox.Text = "無效按鍵"
    end
end)

UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if gameProcessed then return end
    if input.KeyCode == HotkeyTP then
        DoTeleport()
    end
end)
